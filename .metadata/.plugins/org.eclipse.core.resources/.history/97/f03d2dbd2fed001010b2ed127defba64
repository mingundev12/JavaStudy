package study20260109;

public class BingoBoard {
	int[] board;
	int lines;
	String owner;

	public BingoBoard(String owner) {
		board = new int[25];
		lines = 0;
		this.owner = owner;
		
		for(int i = 0; i < 25; i++) {
			board[i] = (int) (Math.floor(Math.random() * 25) + 1);
			
			for(int j = 0; j < i; j++) {
				if (board[j] == board[i]) {
					i--;
					break;
				}
			}
		}
	}
	
	public void checkLine() {
		lines = 0;
		
		int col = 0, row = 0, diag1 = 0, diag2 = 0;
		
		for (int i = 0; i < 5; i++) {
			col = 0;
			row = 0;
			for (int j = 0; j < 5; j++) {
				if (board[(i * 5) + j] == 0) col++;
				if (board[(j * 5) + i] == 0) row++;
			}
			if (board[i * 6] == 0) diag1++;
			if (board[i * 4 + 4] == 0) diag2++;
			
			if (col == 5) lines++;
			if (row == 5) lines++;
		}
		
		if (diag1 == 5) lines++;
		if (diag2 == 5) lines++;
		
		System.out.println(owner + "의 빙고수 : " + lines);
	}
	
	public void printBoard() {
		System.out.println(owner + "의 빙고판");
		
		System.out.println("┌───┬───┬───┬───┬───┐");
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				if (board[(i * 5) + j] != 0) System.out.printf("│%3d", board[(i * 5) + j]);
				else System.out.printf("│   ");
			}
			if (i != 4)	System.out.println("│\n├───┼───┼───┼───┼───┤");
			else System.out.println("│\n└───┴───┴───┴───┴───┘");
		}
	}
	
	public boolean bingo(int num) {
		for (int i = 0; i < board.length; i++) {
			if (board[i] == num) {
				board[i] = 0;
				return true;
			}
		}
		return false;
	}
}
