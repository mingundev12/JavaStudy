package study20260109;

public class Test {

	public static void main(String[] args) {
		test01();
		test02();
		test03();
		test04();
		test05();
	}

	static void test01() {
		
//		문제 1
		String name = "홍길동";
		int age = 25;
		double height = 175.5;
		String gender = "남";
		boolean isStudent = true;
		
		System.out.println(name);
		System.out.println(age);
		System.out.println(height);
		System.out.println(gender);
		System.out.println(isStudent);
		
	}
	
	static void test02() {

//		문제 2
		int a = 10;
		int b = 20;
		
		int temp;
		
		temp = a;
		a = b;
		b = temp;
		
		System.out.println("a : " + a + ", b : " + b);
		
	}
	
	static void test03() {

//		문제 3
		int width = 8;
		int height = 5;
		
		int area;
		
		area = width * height;
		
		System.out.println("사각형 넓이 : " + area);
		
		
	}
	
	static void test04() {
		
//		문제 4
		int kor = 85, eng = 90, mat = 78;
		int sum, avg;
		
		sum = kor + eng + mat;
		
		avg = sum / 3;
		
		System.out.println("총점 : " + sum + " , 평균 : " + avg);
		
	}

	static void test05() {
		
//		문제 5
		int second = 3726;
		int hour, minute;
		
		minute = second / 60;
		hour = minute / 60;
		
		minute %= 60;
		second %= 60;
		
		System.out.println(hour + "시간 " + minute + "분 " + second + "초");
		
	}
	
	static void test06() {
		
//		문제 6
		int score = 72;
		
		if (score >= 60) {
			System.out.println("합격");
		} else {
			System.out.println("불합격");
		}
	}
	
	static void test07() {
		
//		문제 7
		int score = 72;
		
		System.out.print("학점 : ");
		if (score >= 90) System.out.println("A");
		else if (score >= 80) System.out.println("B");
		else if (score >= 70) System.out.println("C");
		else if (score >= 60) System.out.println("D");
		else System.out.println("F");
		
	}

	
	static void test08() {
		
//		문제 8
		
		int n = 10;
		int sum = 0;
		
		for (int i = 1; i <= n; i++) {
			sum += i;
		}
		
		System.out.println("1부터 " + n + "까지의 합계 : " + sum);
		
	}
	
	static void test09() {
		
//		문제 9
		int[] arr = { 10, 20, 30, 40, 50 };
		int sum = 0, avg = 0;
		
		for (int value : arr) {
			sum += value;
		}
		avg = sum / arr.length;
		
		System.out.println("배열 합계 : " + sum + " , 배열 평균 : " + avg);
	}
	
	static void test10() {
		
//		문제 10
		int[] scores = { 87, 65, 92, 100, 74 };
		int max = 0, min = 0;
		
	}
}
