package study20260109;

public class MainMethod {
	
	int score = 50; // 인스턴스
//	static 메서드에서는 instance variable 이나 instance method
//	사용불가. 생성되는 시점이 다르기 때문에 사용할 수 없다.
	
//	instance method 에서는 static 변수나 static 메서드 사용가능

	public static void main(String[] args) {
		
		Member member = new Member();
		member.name = "김유신";
//		private age라서 사용할 수 없다.
		member.age = 24;
		
		Member member2 = new Member("이순신", 34, "남");
		
//		클래스 외부에서 클래스 변수에 데이터 저장하는 방법
		Member.dept = "컴퓨터공학과";
		
//		기본적으로 개발자 편의를 위해서 String 형태의 값이 저장되는 경우엔
//		참조변수의 이름만 넣어도 .toString() 메서드가 호출된다.
		System.out.println(member.toString());
		System.out.println(member2);
		
//		상수
//		final int num = 0;
//		num = 20;
//		한번 선언된 상수는 값을 변경할 수 없다.
		
//		static
//		static int aa = 30;
//		일반적으로 불가능
		
//		MainMethod 라는 클래스의 객체를 생성해야 score 변수가 생성된다
//		그러나 void main 은 static 메서드이기 때문에 프로그램 시작과 동시에 존재한다.
//		그러므로 static 메서드 안에서는 인스턴스 변수를 사용하면 안된다.
//		인스턴스 변수 score 를 main 에서 호출하면 오류가 발생
//		System.out.println(score);
		
	}

}
