package study20260113;

public class Method3 {

	public static void main(String[] args) {
		
//		잘못된 예시
		User[] users = new User[5];
//		users[0].setName("이순신");
//		초기화를 하지 않았기 때문에 오류가 발생한다.
//		Exception in thread "main" java.lang.NullPointerException: 
//		Cannot invoke "study20260113.User.setName(String)" because "users[0]" is null
//		User u; u.setName("이성계"); 이것과 같다.
//		users 는 User[5]의 참조변수이기만 할 뿐, 이 메모리 공간에 객체가 설정되어있지 않다.
		users[0] = new User("lee", "1234", "이순신", "01011112222"); // User 클래스 객체생성
//		users[0].setName("이순신");
		System.out.println(users[0].getName());

	}

}
