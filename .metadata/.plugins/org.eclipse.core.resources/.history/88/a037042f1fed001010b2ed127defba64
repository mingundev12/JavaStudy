package study20260109;

public class TestAdv01 {

	public static void main(String[] args) {
		
//		문제 1
		int[] monthlySales = { 1200, 950, 1430, 800, 1600, 1700, 900, 1100, 1550, 1800, 1300, 2000 };
		int sumSales = 0, avgSales = 0;
		int maxSales = monthlySales[0];
		int minSales = monthlySales[0];
		int count = 0, maxMonth = 0, minMonth = 0;
		
		for (int sale : monthlySales) {
			sumSales += sale;
			if (sale > maxSales) maxSales = sale;
			if (sale < minSales) minSales = sale;
		}
		
		avgSales = maxSales / monthlySales.length;
		
		for (int sale : monthlySales) {
			if (sale >= avgSales) count++;
		}
		
		System.out.println("연간 총 매출 : " + sumSales);
		System.out.println("월 평균 매출 : " + avgSales);
		System.out.println("")

	}

}
