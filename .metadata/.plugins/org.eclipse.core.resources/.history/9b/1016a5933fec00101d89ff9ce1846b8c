//		문3.
//		정수10개를 저장할수있는 배열을 선언
//		1~50의 무작위값 저장
//		배열의 첫번째 값과 마지막 값 출력

		int[] array = new int[10];
		
		for (int i = 0; i < array.length; i++) {
			array[i] = (int) Math.floor(Math.random() * 50) + 1;
		}
		
		System.out.println("첫번째 값 : " + array[0]);
		System.out.println("마지막 값 : " + array[array.length - 1]);
		
//		문제4. 문제 3번의 배열에 저장된 무작위 정수 중 짝수에 해당하는 정수만 출력하세요
		
		for (int val : array) {
			if (val % 2 == 0) {
				System.out.print(val + " ");
			}
		}
		System.out.println();
	}

}
