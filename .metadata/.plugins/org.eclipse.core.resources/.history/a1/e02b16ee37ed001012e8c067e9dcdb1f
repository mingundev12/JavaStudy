package study20260109;

import java.util.Scanner;

public class Bingo {
	
	public static final int NUM_RANGE = 100;
	
	static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		BingoBoard user = new BingoBoard("user");
		BingoBoard com = new BingoBoard("com");

		com.printBoard();
		user.printBoard();
		while (true) {
			
			int num = -1;
			while (true) {
				System.out.print(user.owner + "의 차례 :");
				num = sc.nextInt();
				if (user.bingo(num)) {
					com.bingo(num);
					break;
				}
				else System.out.println("숫자를 다시 입력하세요");
			}
			
			com.printBoard();
			user.printBoard();
			
			if (user.lines == 5) {
				System.out.println(user.owner + "의 승리!");
				break;
			}
			if (com.lines == 5) {
				System.out.println(com.owner + "의 승리!");
				break;
			}

			System.out.print(com.owner + "의 차례 :");
			
			num = com.bingoCom();
			System.out.println(num);
			com.bingo(num);
			user.bingo(num);
			
			com.printBoard();
			user.printBoard();
			
			if (user.lines == 5) {
				System.out.println(user.owner + "의 승리!");
				break;
			}
			if (com.lines == 5) {
				System.out.println(com.owner + "의 승리!");
				break;
			}
		}
	}

}
