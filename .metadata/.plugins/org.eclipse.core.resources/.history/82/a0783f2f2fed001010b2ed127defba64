package study20260109;

import java.util.Scanner;

public class Bingo {
	
	static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		BingoBoard user = new BingoBoard("user");
		BingoBoard com = new BingoBoard("com");

		while (true) {
			com.printBoard();
			user.printBoard();
			
			int num = -1;
			while (true) {
				System.out.print(user.owner + "의 차례 :");
				num = sc.nextInt();
				if (user.bingo(num)) {
					com.bingo(num);
					break;
				}
				else System.out.println("숫자를 다시 입력하세요");
			}

			num = -1;
			System.out.print(com.owner + "의 차례 :");
			while (true) {
				num = (int) (Math.floor(Math.random() * 25) + 1);
				if (com.bingo(num)) break;
			}
			
			user.checkLine();
			com.checkLine();
			
			if (user.lines == 5) {
				System.out.println(user.owner + "의 승리!");
				break;
			}
			if (com.lines == 5) {
				System.out.println(com.owner + "의 승리!");
				break;
			}
		}
	}

}
