//		숫자 야구
		System.out.println("숫자 야구 게임");
		int com1 = (int) Math.floor(Math.random() * 9) + 1, com2, com3;
		while (true) {
			com2 = (int) Math.floor(Math.random() * 9) + 1;
			com3 = (int) Math.floor(Math.random() * 9) + 1;
			if(com1 != com2 && com1 != com3 && com2 != com3) break;
		}
		int user1, user2, user3;
		
		while (true) {
			int str = 0, ball = 0;
			System.out.print("1~9 중에 서로 다른 숫자 세개 입력 : ");
			user1 = scan.nextInt();
			user2 = scan.nextInt();
			user3 = scan.nextInt();
			
			if (user1 == com1)
				str++;
			else if (user1 == com2 || user1 == com3)
				ball++;

			if (user2 == com2)
				str++;
			else if (user2 == com1 || user2 == com3)
				ball++;
			
			if (user3 == com3)
				str++;
			else if (user3 == com1 || user3 == com2)
				ball++;
			
			System.out.println(str + "S " + ball + "B " + (3-str-ball) + "OUT");
		}

	}

}
