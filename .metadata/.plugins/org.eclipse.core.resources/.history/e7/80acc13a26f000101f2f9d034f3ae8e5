package study20260113;

import java.util.Scanner;

public class UserService {
	
	private Scanner sc = new Scanner(System.in);
//	아이디 찾기 메서드
//	이름을 입력하면 아이디 찾기 할것이다.
	public void findId(User[] users) {
		String name;
		
		System.out.println("=====아이디 찾기=====");
		System.out.print("이름 입력 : ");
		name = sc.nextLine();
		
		for(User user : users) {
			if(user.getName().equals(name)) {
				System.out.println( user.getId());
				break;
			}
		}
	}
	
//	비밀번호 찾기 메서드
//	아이디와 연락처를 입력하면 비밀번호를 변경할 수 있다.
	public void findPassword(User[] users) {
		System.out.println("=====비밀번호 찾기=====");
		System.out.print("아이디 입력 : ");
		String id = sc.nextLine();
		System.out.print("연락처 입력 : ");
		String tel = sc.nextLine();
		
		for(User user : users) {
			if(user.getId().equals(id) && user.getTel().equals(tel)) {
				while (true) {
					System.out.print("새로운 비밀번호 입력 : ");
					String password = sc.nextLine();
					System.out.print("비밀번호를 다시 입력해주세요 : ");
					String passCheck = sc.nextLine();
					if (password.equals(passCheck)) {
						user.setPassword(password);
						return;
					} else {
						System.out.println("비밀번호가 일치하지 않습니다");
					}
				}
			}
		}
	}

}

//	데이터 저장 관리하기 위한 클래스에서
//	데이터 필터링이나, 파일저장(DB), 불러오기 등등을 수행하지 않는다.

//	데이터 저장 관리하기 위한 클래스에서는
//	저장에 관해 메서드를 주로 만들고
//	데이터 변환에 대해서만 만든다.
